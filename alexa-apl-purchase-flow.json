{
  "type": "APL",
  "version": "2023.3",
  "mainTemplate": {
    "parameters": ["payload"],
    "items": [
      {
        "type": "Container",
        "width": "100vw",
        "height": "100vh",
        "direction": "column",
        "justifyContent": "spaceBetween",
        "background": {
          "color": "#FFFFFF"
        },
        "items": [
          {
            "type": "Container",
            "width": "100%",
            "height": "auto",
            "paddingTop": 40,
            "paddingBottom": 20,
            "paddingLeft": 40,
            "paddingRight": 40,
            "items": [
              {
                "type": "Container",
                "direction": "row",
                "alignItems": "center",
                "justifyContent": "spaceBetween",
                "items": [
                  {
                    "type": "Container",
                    "direction": "row",
                    "alignItems": "center",
                    "items": [
                      {
                        "type": "Container",
                        "width": 60,
                        "height": 60,
                        "borderRadius": 30,
                        "background": {
                          "type": "LinearGradient",
                          "colorRange": ["#00d4ff", "#0099cc", "#0066ff"],
                          "inputRange": [0, 0.5, 1],
                          "angle": 45
                        },
                        "boxShadow": "0 0 20px rgba(0, 212, 255, 0.3)",
                        "items": [
                          {
                            "type": "Text",
                            "text": "üõçÔ∏è",
                            "fontSize": 28,
                            "color": "white",
                            "textAlign": "center",
                            "textAlignVertical": "center"
                          }
                        ]
                      },
                      {
                        "type": "Container",
                        "paddingLeft": 20,
                        "items": [
                          {
                            "type": "Text",
                            "text": "AI Pro Shop",
                            "fontSize": 32,
                            "fontWeight": "bold",
                            "color": "#00d4ff"
                          },
                          {
                            "type": "Text",
                            "text": "${payload.subtitle}",
                            "fontSize": 14,
                            "color": "#a0a0a0",
                            "marginTop": 5
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "Container",
                    "direction": "row",
                    "alignItems": "center",
                    "background": "rgba(0, 212, 255, 0.1)",
                    "borderRadius": 20,
                    "padding": 15,
                    "borderWidth": 2,
                    "borderColor": "#00d4ff",
                    "items": [
                      {
                        "type": "Text",
                        "text": "üõí",
                        "fontSize": 24,
                        "marginRight": 10
                      },
                      {
                        "type": "Text",
                        "text": "${payload.cartCount} items",
                        "fontSize": 16,
                        "fontWeight": "bold",
                        "color": "#00d4ff"
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Container",
            "width": "100%",
            "grow": 1,
            "paddingLeft": 40,
            "paddingRight": 40,
            "paddingBottom": 20,
            "items": [
              {
                "when": "${payload.viewMode == 'products'}",
                "type": "Sequence",
                "scrollDirection": "vertical",
                "height": "100%",
                "data": "${payload.products}",
                "numbered": true,
                "items": [
                  {
                    "type": "Container",
                    "width": "100%",
                    "background": "#f7fafc",
                    "borderRadius": 20,
                    "borderWidth": 1,
                    "borderColor": "#e2e8f0",
                    "padding": 25,
                    "marginBottom": 20,
                    "boxShadow": "0 8px 32px rgba(0, 0, 0, 0.1)",
                    "items": [
                      {
                        "type": "Container",
                        "direction": "row",
                        "items": [
                          {
                            "type": "Image",
                            "source": "${data.image_url}",
                            "width": 150,
                            "height": 150,
                            "scale": "best-fit",
                            "borderRadius": 15,
                            "boxShadow": "0 4px 16px rgba(0, 0, 0, 0.3)"
                          },
                          {
                            "type": "Container",
                            "paddingLeft": 25,
                            "grow": 1,
                            "items": [
                              {
                                "type": "Text",
                                "text": "${data.name}",
                                "fontSize": 20,
                                "fontWeight": "bold",
                                "color": "#2d3748",
                                "maxLines": 2,
                                "lineHeight": 1.3
                              },
                              {
                                "type": "Container",
                                "direction": "row",
                                "alignItems": "baseline",
                                "marginTop": 10,
                                "items": [
                                  {
                                    "type": "Text",
                                    "text": "$${data.price}",
                                    "fontSize": 32,
                                    "fontWeight": "bold",
                                    "color": "#48bb78"
                                  },
                                  {
                                    "type": "Container",
                                    "paddingLeft": 20,
                                    "items": [
                                      {
                                        "type": "Text",
                                        "text": "‚≠ê ${data.rating}/5",
                                        "fontSize": 16,
                                        "color": "#ffd700",
                                        "fontWeight": "600"
                                      },
                                      {
                                        "type": "Text",
                                        "text": "(${data.reviews} reviews)",
                                        "fontSize": 12,
                                        "color": "#a0a0a0",
                                        "marginTop": 2
                                      }
                                    ]
                                  }
                                ]
                              },
                              {
                                "type": "Text",
                                "text": "${data.description}",
                                "fontSize": 14,
                                "color": "#718096",
                                "lineHeight": 1.4,
                                "maxLines": 2,
                                "marginTop": 10
                              },
                              {
                                "type": "Container",
                                "direction": "row",
                                "marginTop": 20,
                                "spacing": 15,
                                "items": [
                                  {
                                    "type": "Container",
                                    "background": {
                                      "type": "LinearGradient",
                                      "colorRange": ["#00ff88", "#00cc66"],
                                      "angle": 45
                                    },
                                    "borderRadius": 15,
                                    "padding": 15,
                                    "boxShadow": "0 4px 15px rgba(0, 255, 136, 0.3)",
                                    "items": [
                                      {
                                        "type": "Text",
                                        "text": "üõí Add to Cart (Say: Add item ${index+1})",
                                        "fontSize": 14,
                                        "fontWeight": "bold",
                                        "color": "#0f0f23",
                                        "textAlign": "center"
                                      }
                                    ]
                                  },
                                  {
                                    "type": "Container",
                                    "background": "rgba(0, 212, 255, 0.2)",
                                    "borderRadius": 15,
                                    "borderWidth": 2,
                                    "borderColor": "#00d4ff",
                                    "padding": 15,
                                    "items": [
                                      {
                                        "type": "Text",
                                        "text": "üì± View Details",
                                        "fontSize": 14,
                                        "fontWeight": "bold",
                                        "color": "#00d4ff",
                                        "textAlign": "center"
                                      }
                                    ]
                                  }
                                ]
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              },
              {
                "when": "${payload.viewMode == 'cart'}",
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "items": [
                  {
                    "type": "Text",
                    "text": "üõí Your Shopping Cart",
                    "fontSize": 28,
                    "fontWeight": "bold",
                    "color": "#667eea",
                    "marginBottom": 20
                  },
                  {
                    "type": "Sequence",
                    "scrollDirection": "vertical",
                    "height": "60vh",
                    "data": "${payload.cartItems}",
                    "items": [
                      {
                        "type": "Container",
                        "width": "100%",
                        "background": "#f0fff4",
                        "borderRadius": 15,
                        "borderWidth": 2,
                        "borderColor": "#48bb78",
                        "padding": 20,
                        "marginBottom": 15,
                        "items": [
                          {
                            "type": "Container",
                            "direction": "row",
                            "alignItems": "center",
                            "items": [
                              {
                                "type": "Image",
                                "source": "${data.image_url}",
                                "width": 80,
                                "height": 80,
                                "scale": "best-fit",
                                "borderRadius": 10
                              },
                              {
                                "type": "Container",
                                "paddingLeft": 20,
                                "grow": 1,
                                "items": [
                                  {
                                    "type": "Text",
                                    "text": "${data.name}",
                                    "fontSize": 16,
                                    "fontWeight": "bold",
                                    "color": "#2d3748",
                                    "maxLines": 2
                                  },
                                  {
                                    "type": "Text",
                                    "text": "$${data.price}",
                                    "fontSize": 20,
                                    "fontWeight": "bold",
                                    "color": "#48bb78",
                                    "marginTop": 5
                                  }
                                ]
                              },
                              {
                                "type": "Text",
                                "text": "‚úì",
                                "fontSize": 32,
                                "color": "#48bb78",
                                "fontWeight": "bold"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "type": "Container",
                    "marginTop": 20,
                    "padding": 25,
                    "background": "#f7fafc",
                    "borderRadius": 20,
                    "borderWidth": 2,
                    "borderColor": "#667eea",
                    "items": [
                      {
                        "type": "Container",
                        "direction": "row",
                        "justifyContent": "spaceBetween",
                        "items": [
                          {
                            "type": "Text",
                            "text": "Total:",
                            "fontSize": 24,
                            "fontWeight": "bold",
                            "color": "#2d3748"
                          },
                          {
                            "type": "Text",
                            "text": "$${payload.cartTotal}",
                            "fontSize": 32,
                            "fontWeight": "bold",
                            "color": "#48bb78"
                          }
                        ]
                      },
                      {
                        "type": "Container",
                        "marginTop": 20,
                        "background": {
                          "type": "LinearGradient",
                          "colorRange": ["#00d4ff", "#0099cc"],
                          "angle": 45
                        },
                        "borderRadius": 15,
                        "padding": 20,
                        "boxShadow": "0 4px 20px rgba(0, 212, 255, 0.4)",
                        "items": [
                          {
                            "type": "Text",
                            "text": "üí≥ Proceed to Checkout (Say: Checkout now)",
                            "fontSize": 18,
                            "fontWeight": "bold",
                            "color": "#0f0f23",
                            "textAlign": "center"
                          }
                        ]
                      }
                    ]
                  }
                ]
              },
              {
                "when": "${payload.viewMode == 'confirmation'}",
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "type": "Container",
                    "width": "80%",
                    "padding": 40,
                    "background": "#f0fff4",
                    "borderRadius": 30,
                    "borderWidth": 3,
                    "borderColor": "#48bb78",
                    "boxShadow": "0 10px 40px rgba(72, 187, 120, 0.3)",
                    "items": [
                      {
                        "type": "Text",
                        "text": "‚úÖ",
                        "fontSize": 80,
                        "textAlign": "center",
                        "marginBottom": 20
                      },
                      {
                        "type": "Text",
                        "text": "Order Confirmed!",
                        "fontSize": 36,
                        "fontWeight": "bold",
                        "color": "#48bb78",
                        "textAlign": "center",
                        "marginBottom": 20
                      },
                      {
                        "type": "Text",
                        "text": "Order #${payload.orderId}",
                        "fontSize": 20,
                        "color": "#2d3748",
                        "textAlign": "center",
                        "marginBottom": 30
                      },
                      {
                        "type": "Container",
                        "direction": "row",
                        "justifyContent": "spaceBetween",
                        "width": "100%",
                        "marginBottom": 20,
                        "items": [
                          {
                            "type": "Text",
                            "text": "Total Paid:",
                            "fontSize": 18,
                            "color": "#718096"
                          },
                          {
                            "type": "Text",
                            "text": "$${payload.orderTotal}",
                            "fontSize": 24,
                            "fontWeight": "bold",
                            "color": "#48bb78"
                          }
                        ]
                      },
                      {
                        "type": "Text",
                        "text": "Check your email for order details and tracking information.",
                        "fontSize": 14,
                        "color": "#a0a0a0",
                        "textAlign": "center",
                        "marginTop": 20
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Container",
            "width": "100%",
            "paddingLeft": 40,
            "paddingRight": 40,
            "paddingBottom": 30,
            "items": [
              {
                "type": "Container",
                "direction": "row",
                "justifyContent": "spaceBetween",
                "alignItems": "center",
                "items": [
                  {
                    "type": "Container",
                    "direction": "row",
                    "alignItems": "center",
                    "items": [
                      {
                        "type": "Container",
                        "width": 8,
                        "height": 8,
                        "borderRadius": 4,
                        "background": "#00ff00",
                        "boxShadow": "0 0 10px rgba(0, 255, 0, 0.5)",
                        "marginRight": 8
                      },
                      {
                        "type": "Text",
                        "text": "Secure Shopping ‚Ä¢ ${payload.itemsCount} Products Available",
                        "fontSize": 12,
                        "color": "#a0a0a0",
                        "fontWeight": "500"
                      }
                    ]
                  },
                  {
                    "type": "Text",
                    "text": "Voice Commands: 'Add item [number]' ‚Ä¢ 'View cart' ‚Ä¢ 'Checkout'",
                    "fontSize": 11,
                    "color": "#666",
                    "fontStyle": "italic"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}


